<html>

<head>
	<title>Settings</title>
	<meta charset = "utf-8">
	<meta name = "viewport" content = "width=device-width, initial-scale=1.0">
	<link href = "css/bootstrap.min.css" rel = "stylesheet">
	<link href = "css/bootstrap-theme.min.css" rel = "stylesheet">
	<link href = "css/sharensetting.css" rel = "stylesheet">
	<link href = "css/navbar.css" rel = "stylesheet">

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>

	<script src="https://www.gstatic.com/firebasejs/8.2.9/firebase-app.js"></script>
	<script src="https://www.gstatic.com/firebasejs/8.2.9/firebase-auth.js"></script>

		<!-- TODO: Add SDKs for Firebase products that you want to use
     	https://firebase.google.com/docs/web/setup#available-libraries -->
	<script src="https://www.gstatic.com/firebasejs/8.2.9/firebase-analytics.js"></script>
	<script src="js/settingsfirebase.js"></script>
	<script src="js/settings.js"></script>
</head>

<body>
	<div class="col-xs-12" id=space>
		<div class="jumbotron navigation-bar">
			<div class="dropdown">
				<img id = side-button src="assets/hamburger.png" style="max-width:100%; max-height:100%;"></img>
				<div class="dropdown-content">
				{{#each navLink}}
				<a class="links-hidden" href="{{url}}"><p class="dropdown-font"><p>{{title}}</p></a>
				{{/each}}
				</div>
			</div>
			
				{{#each navIcon}}
				<div class="home-btn">
					<button class="settings">
						<a href="{{url}}"><img src="{{src}}" style="max-width:75%; max-height:75%;"></img></a>
					</button>
				</div>
				{{/each}}

		</div>
	</div>
	<div class="container">
		<div class ="row">
			<div class = "col-xs-10 col-xs-offset-1 title">
					<h1 class = "plastrack" ><i>{{pageTitle}}</i></h1>
			</div>
		</div>
		

		<div class="row">
			<div class="col-xs-12 submit">
				<div id="sign-in-container">
				<input type="email" placeholder="email" id="email" />
				<input type="password" placeholder="password" id="password" />
				<button onclick="signIn()" id="signIn"> Sign In </button></div>
			</div>
		</div>

		<!--<div class="row">
			<div class="col-xs-12 submit">
				<div id="sign-out-container">
				<p id="username"></p> <button onclick="signOut()" id="signOut"> Sign Out </button></div>
			</div>
		</div>-->

					<div id="sign-out-container">
							<p id="username"></p>
						<div class="sign-out-box">
								<button onclick="signOut()" id="signOut"> Sign Out </button>
						</div>
					</div>

		{{#each dropdown}}
		<div class="row">
			<div class="col-xs-12 share">
					<div class="well set-share">
						<div class="setting-text">
							<p class="set-text">{{title}}</p>
						</div>
						<div class="set-box">
							<select name="friend" id=choose-settings>
								{{#each option}}
								<option value="friend">{{optionName}}</option>
								{{/each}}
							</select>
						</div>
					</div>
			</div>
		</div>
		{{/each}}
	
		{{#each slider}}	
			<div class="row">
				<div class="col-xs-12 share">
					<div class="well set-share">
						<div class="setting-text">
							<p class="set-text">{{title}}</p>
						</div>
						<div class="set-box">
							<label class="switch">
								<input type="checkbox">
								<span class="slider round"></span>
							</label>
						</div>
					</div>
				</div>
			</div>
			{{/each}}
			
			<div class="row">
				<div class="col-xs-10 col-xs-offset-1">
					<div class="integrate">
						<input type="submit" value="{{shareBtnTitle}}" id = integration>
					</div>
				</div>
			</div>								
		
		
		<div class="row">
			<div class="col-xs-6 col-xs-offset-3 submit">
				<input type="submit" value="Save" id = save-btn>
			</div>
		</div>
	

	</div>
</body>

</html>
