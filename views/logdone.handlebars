<html>

<head>
	<title>{{title}}</title>
	<meta charset = "utf-8">
	<meta name = "viewport" content = "width=device-width, initial-scale=1.0">
	<link href = "css/bootstrap.min.css" rel = "stylesheet">
	<link href = "css/bootstrap-theme.min.css" rel = "stylesheet">
	<link href = "css/navbar.css" rel = "stylesheet">
	<link href = "css/log.css" rel = "stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
	
</head>

<body>
	<div class="col-xs-12" id=space>
		<div class="jumbotron navigation-bar">
			<div class="dropdown">
				<img id = side-button src="assets/hamburger.png" style="max-width:100%; max-height:100%;"></img>
				<div class="dropdown-content">
				{{#each navLink}}
				<a class="links-hidden" href="{{url}}"><p class="dropdown-font"><p>{{title}}</p></a>
				{{/each}}
				</div>
			</div>
			
				{{#each navIcon}}
				<div class="home-btn">
					<button class="settings">
						<a href="{{url}}"><img src="{{src}}" style="max-width:75%; max-height:75%;"></img></a>
					</button>
				</div>
				{{/each}}
		</div>
	</div>
  
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="well">
          <p>You're done Logging!</p>
        </div>
      </div>
    </div>
    
    
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <div class="total-logged" id=total>
          50
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-12">
        <div class="small-med-large">
          <div class="small">
            1
          </div>
          <div class="medium">
            2
          </div>
          <div class="large">
            3
          </div>
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-12">
        <div class="list-plastics">
          
        </div>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-12">
        <a href="/logpage">
          <div class = "jumbotron log">
            <h2><b>Log a Plastic</b></h2>
          </div>
        </a>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <a href="/history">
          <div class ="well menu-options">
            <h2>View Log History</h2>
          </div>
        </a>
      </div>
    </div>
  
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <a href="/share">
          <div class="well menu-options">
            <h2>Share your Progress</h2>
          </div>
        </a>
      </div>
    </div>
  </div>
  
  
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script> 
  <script src="js/bootstrap.min.js"></script>
  <script src="js/logdone_functions.js"></script>
</body>
  
</html>
