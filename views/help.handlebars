<html>

<head>
	<title>Plastrack Help Page</title>
	<meta charset = "utf-8">
	<meta name = "viewport" content = "width=device-width, initial-scale=1.0">
	<link href = "css/bootstrap.min.css" rel = "stylesheet">
	<link href = "css/bootstrap-theme.min.css" rel = "stylesheet">
	<link href = "css/help.css" rel = "stylesheet">
	<link href = "css/navbar.css" rel = "stylesheet">
</head>

<body>
		<div class="col-xs-12" id=space>
			<div class="jumbotron navigation-bar">
				<div class="dropdown">
					<img id = side-button src="assets/hamburger.png" style="max-width:100%; max-height:100%;"></img>
					<div class="dropdown-content">
						{{#each navLink}}
						<a class="links-hidden" href="{{url}}"><p class="dropdown-font"><p>{{title}}</p></a>
						{{/each}}
					</div>
				</div>
				
				{{#each navIcon}}
				<div class="home-btn">
					<button class="settings">
						<a href="{{url}}"><img src="{{src}}" style="max-width:75%; max-height:75%;"></img></a>
					</button>
				</div>
				{{/each}}
			</div>
			
		</div>
	
	<div class ="row">
		<div class = "col-xs-10 col-xs-offset-1 title">
				<h1 class = "plastrack" ><i>{{pageTitle}}</i></h1>
		</div>
	</div>


	<div class="row">
		{{#each help}}
		<div class="col-xs-10 col-xs-offset-1 col1">
			<div class="jumbotron help-titles" id = title>
				{{title}}
			</div>
			<div class="well descriptions" id = desc>
				{{desc}}
			</div>
		</div>	
		{{/each}}
	</div>
	
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
</body>
</html>
